extends ../layouts/default

block intro
	.container
		h1 Recent Projects
	
block content
	.container
		if galleries.length
			each gallery in galleries
				h2= gallery.name
					if gallery.publishedDate
						.pull-right.text-muted= gallery._.publishedDate.format('Do MMM YYYY')
				.row.gallery-images
					if gallery.heroImage.exists
						.col-sm-12.hero-gallery-image: img(src=gallery._.heroImage.limit(1200,1200)).img-sm-rounded
						.col-sm-12.gallery-thumbs: .row
							each image in gallery.images
								.col-sm-6.gallery-image: img(src=image.limit(600,600)).img-sm-rounded
					else
						each image in gallery.images
							.col-xs-6.gallery-image: img(src=image.limit(600,600)).img-sm-rounded
		else
			h3.text-muted There are no image galleries yet.
